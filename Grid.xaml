                     <TextBlock.Text>
                                            <Trans Key="modules.salonModule.views.employeeForm.with">
                                                <Parameter Key="name" Binding="{Binding Path=MyEmployee.FullName}"/>
                                            </Trans>
                                        </TextBlock.Text>
                    <Border Grid.Row="5" BorderThickness="1" BorderBrush="Gray" Margin="5" Height="1"/>
                </Grid>
            </DataTemplate>